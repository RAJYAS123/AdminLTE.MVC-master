                { "data": "Address", "name": "Address", "autoWidth": true },
                { "data": "Gender", "name": "Gender", "autoWidth": true },
                { "data": "Country", "name": "Country", "autoWidth": true },
                { "data": "State", "name": "State", "autoWidth": true },
                { "data": "Salary", "name": "Salary", "autoWidth": true },

            ]

        });
    });
</script>


