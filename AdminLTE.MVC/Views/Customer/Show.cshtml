<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js"></script>



<p>
    <a asp-action="Add" class="btn btn-outline-primary">Create New Customer</a>
</p>
<table id="myTable" class="table bg-blue" width="100%" cellspacing="0">
    <thead>
        <tr style="color:aqua">
            <th>Name</th>
            <th>Age</th>
            <th>Address</th>
            <th>Gender</th>
            <th>Country</th>
            <th>State</th>
            <th>Salary</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="color:ghostwhite">
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    <a asp-action="Add" class="btn btn-info" asp-route-id="@item.id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script src="~/jquery/jquery.min.js"></script>
